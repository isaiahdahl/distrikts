<div class="form">
  <div class="text-center">
    <h4 class="text-center">Sign in</h4>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: false, placeholder: "Email", required: false, autofocus: true %>
        <%= f.input :password, label: false, placeholder: "Password", required: false %>
        <%= f.input :remember_me, inner_html: { class: 'Remember' }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-block" %>
      </div>

  <% end %>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), {class: 'btn-block btn-fb'}  %><br />
      <% end -%>
  <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end -%>
  </div>
</div>
