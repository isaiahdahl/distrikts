<div id="dash">

  <div class="dash-container">

    <div class="dash-details">

      <% if current_user.avatar? %>
      <% avatar_url = cl_image_path(current_user.avatar.path, { size: '250x250', crop: :thumb, gravity: :face }) %>
      <% else %>
      <% avatar_url = current_user.facebook_picture_url || "default-avatar-lg" %>
      <% end %>
      <%= image_tag avatar_url, class: "avatar-lg" %>
      <div class="dash-details-information">
        <h2 class="touch upper bold"><%= @user.first_name %> <%= @user.last_name %></h2>
        <h4 class="upper light bumpdown"><%= @user.style.name %></h4>
        <div class="style-details">
          <a class="btn btn-outline" data-toggle="modal" data-target="#modalDetails">Details</a>
        </div>
      </div>
    </div>
    <div class="user-filters @gold">
      <%= link_to distrikts_path(scope: "wishlist", q: params[:q]), remote: true do %>
        <div class="users-filter filter text-center">
          <div class="hexagon-filter" id="wishlist">
            <%= image_tag "hexagons/hex-outline.png", class: "hex-filter outline-hex" %>
            <%= image_tag "hexagons/hex-solid.png", class: "hex-filter hidden full-hex" %>
            <div class="filter-block" id="wishlist-text">
              <h2 class="filter-num"><%= @wishlisted.count %></h2>
              <h5 class="wishlist upper">Wishlist</h5>
            </div>
          </div>
        </div>
      <% end %>

      <%= link_to distrikts_path(scope: "visit",  q: params[:q]), remote: true do %>
        <div class="users-filter text-center">
          <div class="hexagon-filter" id="visit">
            <%= image_tag "hexagons/hex-outline.png", class: "hex-filter outline-hex" %>
            <%= image_tag "hexagons/hex-solid.png", class: "hex-filter hidden full-hex" %>
            <div class="filter-block" id="visit-text">
              <h2 class="filter-num"><%= @visited.count %></h2>
              <h5 class="wishlist upper">Visited</h5>
            </div>
          </div>
        </div>
      <% end %>

      <div class="users-filter text-center">
        <div class="hexagon-filter">
          <%= image_tag "hexagons/hex-outline.png", class: "hex-filter outline-hex" %>
          <%= image_tag "hexagons/hex-solid.png", class: "hex-filter hidden full-hex" %>
          <div class="filter-block">
            <h2 class="filter-num">45</h2>
            <h5 class="wishlist upper">Following</h5>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- Details Modal -->
<%= render 'shared/profile-modal' %>

