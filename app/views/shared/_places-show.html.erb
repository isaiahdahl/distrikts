<div class="place-show-container">
  <div class="place-show-top" style="background-image: url('<%= @place.img_url %>')">

    <div id="place-close">
      <%= link_to distrikt_places_close_path(@distrikt.id), remote: true do %>
        <%= image_tag "close-white-lg.png", class: "x-icon" %>
      <% end %>
    </div>

  </div>

  <div class="place-show-bottom">
    <div class="place-category">
      <p id="<%= @place.category %>"><%= @place.category.upcase %> | <%= "â‚¬" * @place.price %></p>
    </div>
    <div class="place-name bold">
      <h2><%= @place.name %></h2>
    </div>
    <hr>
    <ul class="li"><%= image_tag "place-marker.png", class: "place-icon" %>  <%= @place.address %></ul>
    <ul class="li"><%= image_tag "place-earth.png", class: "place-icon" %>  <%= link_to @place.url || "N/A", @place.url, target: "_blank" %></ul>
    <ul class="li"><%= image_tag "place-phone.png", class: "place-icon" %>  <%= @place.phone || "N/A" %></ul>
    <ul class="li"><%= image_tag "place-hours.png", class: "place-icon" %>  <%= @place.hour || "N/A" %></ul>
  </div>
</div>

