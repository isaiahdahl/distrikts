<div id="card-filters-wrapper">

  <div class="card-filters-container">

    <div class="card-filters-left">
      <%= search_form_for @q do |f| %>
          <%= image_tag 'downarrow.png', class: "down-arrow"  %>
          <%= f.select :city_name_cont, @cities %>
          <%= hidden_field_tag :scope, params[:scope] %>
          <%= f.submit class: :hidden %>
      <% end %>

      <%= search_form_for @q do |f| %>
        <%= image_tag 'downarrow.png', class: "down-arrow"  %>
        <%= f.select :city_country_cont, @countries %>
        <%= hidden_field_tag :scope, params[:scope] %>
        <%= f.submit  class: :hidden%>
      <% end %>

      <%= search_form_for @q do |f| %>
          <%= image_tag 'downarrow.png', class: "down-arrow"  %>
          <%= f.select :city_continent_cont, @continents %>
          <%= hidden_field_tag :scope, params[:scope] %>
          <%= f.submit class: :hidden %>
      <% end %>
      <%= link_to "Clear Search", request.path, class:"btn-solid clear-search", id: "clear-search" %>
    </div>

    <div class="card-filters-right">
      <%= search_form_for @q do |f| %>
        <%= f.search_field :name_or_city_name_or_city_country_cont, placeholder: "Search", class: "btn-outline" %>
        <%= hidden_field_tag :scope, params[:scope] %>
        <%= f.submit class: "btn-outline", placeholder: false%>
      <% end %>
    </div>
  </div>
</div>
