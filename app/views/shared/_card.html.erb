<% @sorted.each do |distrikt| %>
  <%= link_to distrikt_path(id: distrikt.id) do %>
<div class="col-xs-6 col-sm-3">
  <div class="card">
    <div class="card-body">
      <div class="card-category text-center">
        <h4><%= compare(@user.score, distrikt.score) %></h4>
        <p>MATCH</p>
      </div>
      <div class="card-desc">
        <p><strong><%= distrikt.name %></strong></p>
        <p><%= distrikt.city.name %>, <%= distrikt.city.country %></p>
        <% if policy(Distrikt).edit? %>
          <a href="<%= edit_distrikt_path(distrikt.id) %>"><i class="fa fa-edit"></i></a>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>
