<div id='map-explore'></div>
<% content_for(:after_js) do %>
<script>
  mapboxgl.accessToken = "<%= ENV['MAPBOX-API'] %>";

  var map = new mapboxgl.Map({
    container: 'map-explore',
    style: 'mapbox://styles/isaiahdahl/cjaaaxy4k29zp2sppk3069h2s',
    center: [<%= @distrikts.first.longitude %>, <%= @distrikts.first.latitude %>],
    zoom: 14,
    bearing: 27,
    pitch: 45
  });

  map.on('load', function() {
    var layers = map.getStyle().layers;

    var labelLayerId;
    for (var i = 0; i < layers.length; i++) {
      if (layers[i].type === 'symbol' && layers[i].layout['text-field']) {
        labelLayerId = layers[i].id;
        break;
      }
    }


    map.addLayer({
      'id': 'maine',
      'type': 'fill',
      'source': {
        'type': 'geojson',
        'data': {
          'type': 'Feature',
          'geometry': {
            'type': 'Polygon',
            'coordinates': [<%= @distrikts[0].outline %>]
          }
        }
      },
      'layout': {},
      'paint': {
        'fill-color': '#f1cb1d',
        'fill-opacity': 0.3
      }
    });

    map.addLayer({
      'id': 'maineee',
      'type': 'fill',
      'source': {
        'type': 'geojson',
        'data': {
          'type': 'Feature',
          'geometry': {
            'type': 'Polygon',
            'coordinates': [<%= @distrikts[1].outline %>]
          }
        }
      },
      'layout': {},
      'paint': {
        'fill-color': '#f1cb1d',
        'fill-opacity': 0.3
      }
    });

    map.addLayer({
      'id': 'maineeee2',
      'type': 'fill',
      'source': {
        'type': 'geojson',
        'data': {
          'type': 'Feature',
          'geometry': {
            'type': 'Polygon',
            'coordinates': [<%= @distrikts[2].outline %>]
          }
        }
      },
      'layout': {},
      'paint': {
        'fill-color': '#f1cb1d',
        'fill-opacity': 0.3
      }
    });

    map.addLayer({
      'id': 'maineeeee3',
      'type': 'fill',
      'source': {
        'type': 'geojson',
        'data': {
          'type': 'Feature',
          'geometry': {
            'type': 'Polygon',
            'coordinates': [<%= @distrikts[3].outline %>]
          }
        }
      },
      'layout': {},
      'paint': {
        'fill-color': '#f1cb1d',
        'fill-opacity': 0.3
      }
    });

    map.addLayer({
      'id': 'maineee4',
      'type': 'fill',
      'source': {
        'type': 'geojson',
        'data': {
          'type': 'Feature',
          'geometry': {
            'type': 'Polygon',
            'coordinates': [<%= @distrikts[4].outline %>]
          }
        }
      },
      'layout': {},
      'paint': {
        'fill-color': '#f1cb1d',
        'fill-opacity': 0.3
      }
    });

    map.addLayer({
      'id': 'maineee5',
      'type': 'fill',
      'source': {
        'type': 'geojson',
        'data': {
          'type': 'Feature',
          'geometry': {
            'type': 'Polygon',
            'coordinates': [<%= @distrikts[5].outline %>]
          }
        }
      },
      'layout': {},
      'paint': {
        'fill-color': '#f1cb1d',
        'fill-opacity': 0.3
      }
    });

  var chapters = {
    <% @distrikts.each do |distrikt| %>
    '<%= distrikt.name.delete(' ') %>': {
      bearing:  <%= [45, 13.4, 70, 80, 12].sample %>,
      center: [<%= distrikt.longitude %>, <%= distrikt.latitude %>],
      zoom: 14,
      pitch: <%= [30, 50, 40, 45, 60, 30].sample %>
    },
    <% end %>
  };

  var features = document.getElementById('features');

  features.onscroll = function() {
    var chapterNames = Object.keys(chapters);
    for (var i = 0; i < chapterNames.length; i++) {
      var chapterName = chapterNames[i];
      if (isElementOnScreen(chapterName)) {
        setActiveChapter(chapterName);
        break;
      }
    }
  };

  var activeChapterName = 'EastVillage';
  function setActiveChapter(chapterName) {
    if (chapterName === activeChapterName) return;

    map.flyTo(chapters[chapterName]);

    document.getElementById(chapterName).setAttribute('class', 'active');
    document.getElementById(activeChapterName).setAttribute('class', '');

    activeChapterName = chapterName;
  }

  function isElementOnScreen(id) {
    var element = document.getElementById(id);
    var bounds = element.getBoundingClientRect();
    return bounds.top < 400 && bounds.bottom > 400;
  }

  });

</script>
<% end %>